html, body {
    width: 100%;
    height: 100%;
    overflow: hidden;
    font-size: 14px;
}

iframe {
    border: none;
}

header.navbar {
    height: 60px;
    background-color: #fff;
    padding: 0;
}

header .logo-box {
    height: 100%;
    width: 200px;
    background: url("../img/logo.png") no-repeat center;
}

aside.left {
    width: 200px;
    background-color: #2a3542;
    height: calc(100% - 60px);
    float: left;
}

main {
    width: calc(100% - 200px);
    height: calc(100% - 60px);
    margin-left: 200px;
    background-color: #f1f2f7;
}

main .page-tabs {
    width: max-content;
    min-width: 100%;
    height: 34px;
    background-color: #d3dde7;
    user-select: none;
}

main .page-tabs .page-tabs-content{
    overflow: hidden;
}

.page-tabs .page-tabs-content a.menu-tab {
    display: block;
    float: left;
    height: 34px;
    line-height: 34px;
    padding: 0 15px;
    cursor: default;
    color: #626f7d;
    border: 1px solid #d3dde7;
}

.page-tabs .page-tabs-content a.menu-tab:hover {
    background-color: #26a7de;
    color: #fff;
    text-decoration: none;
    border-color: #26a7de #d3dde7;
}

.page-tabs .page-tabs-content a.menu-tab.active {
    background-color: #26a7de;
    color: #fff;
    border-color: #26a7de;
}

.page-tabs .page-tabs-content a.menu-tab i {
    margin-left: 5px;
    font-size: 12px;
    color: #c4cad1;
}

.page-tabs .page-tabs-content a.menu-tab i:hover {
    color: #eceeef;
}

main .frame-box {
    width: 100%;
    height: calc(100% - 34px);
    overflow: hidden;
}