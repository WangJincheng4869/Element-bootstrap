html, body {
    width: 100%;
    height: 100%;
    overflow: hidden;
    font-size: 14px;
}

iframe {
    border: none;
}

header.navbar {
    height: 60px;
    background-color: #fff;
    padding: 0;
}

header .logo-box {
    margin-right: 0;
    height: 100%;
    width: calc(200px - .5rem);
    background: url("../img/logo.png") no-repeat center;
}

header .navbar-nav-scroll .btn-light {
    border: 1px solid #e5e5e5;
    background-color: #fff;
    box-shadow: none !important;
    padding: 0 0.5rem;
    font-size: 1.12rem;
    color: #666;
}

header #dropdown_menu_user {
    color: #4d4d4d;
    font-size: 1.1rem;
}

header .vertical-line {
    border-left: 1px solid #eff4f7;
    display: inline-block;
    height: 100%;
    width: 0;
}

header #btn_quit span {
    color: #666;
    margin-left: .5rem;
}

header #btn_quit {
    color: #26a7e1;
    margin: 0 1.55rem;
    text-decoration: none;
}

header #btn_quit:hover {
    text-decoration: none;
}

header .dropdown-toggle::after {
    display: inline-block;
    width: .45em;
    height: .45em;
    content: '';
    border-width: 1px 0 0 1px;
    border-style: solid;
    border-color: initial;
    -webkit-transform: rotate(-135deg);
    transform: rotate(-135deg);
    transition: all .3s ease-out;
    margin-left: 0.5em;
}

aside.left {
    width: 200px;
    background-color: #2a3542;
    height: calc(100% - 60px);
    float: left;
    -webkit-transition: width .2s;
    transition: width .2s;
}

aside.left.nav-mini {
    width: 64px;
    overflow: visible !important;
    -webkit-transition: width .2s;
    transition: width .2s;
}

aside.left.nav-mini + main {
    width: calc(100% - 64px);
    margin-left: 64px;
}

main {
    width: calc(100% - 200px);
    height: calc(100% - 60px);
    margin-left: 200px;
    background-color: #f1f2f7;
    -webkit-transition: width .2s, margin-left .2s;
    transition: width .2s, margin-left .2s;
}

main .page-tabs {
    width: max-content;
    min-width: 100%;
    height: 34px;
    background-color: #d3dde7;
    user-select: none;
}

main .page-tabs .page-tabs-content {
    overflow: hidden;
}

.page-tabs .page-tabs-content a.menu-tab {
    display: block;
    float: left;
    height: 34px;
    line-height: 34px;
    padding: 0 15px;
    cursor: default;
    color: #626f7d;
    border: 1px solid #d3dde7;
}

.page-tabs .page-tabs-content a.menu-tab:hover {
    background-color: #26a7de;
    color: #fff;
    text-decoration: none;
    border-color: #26a7de #d3dde7;
}

.page-tabs .page-tabs-content a.menu-tab.active {
    background-color: #26a7de;
    color: #fff;
    border-color: #26a7de;
}

.page-tabs .page-tabs-content a.menu-tab i {
    margin-left: 5px;
    font-size: 12px;
    color: #c4cad1;
}

.page-tabs .page-tabs-content a.menu-tab i:hover {
    color: #eceeef;
}

main .frame-box {
    width: 100%;
    height: calc(100% - 34px);
    overflow: hidden;
}